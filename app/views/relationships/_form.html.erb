<%= form.fields_for :relationships do |f| %>
  <div class="field">
<%= f.label :role %>
<%= f.collection_select(:person_role_id, PersonRole.all, :id, :name) %>
  </div>
  <div class="field">
<%= f.label :person_name %>
<%= f.collection_select(:people_id, People.all, :id, :name)%>
  </div>

  <% unless f.object.nil? || f.object.new_record? %>
    <div class="field">
      <%= f.label :_destroy, 'Remove:' %>
      <%= f.check_box :_destroy %>
    </div>
  <% end %>
<% end %>