<%= form.fields_for :markets do |f| %>
  <div class="field">
<%= f.label :year %>
<%= f.text_field :year %>
  </div>
  <div class="field">
<%= f.label :country %>
<%= f.collection_select(:country_id, Country.all, :id, :name)%>
  </div>

  <% unless f.object.nil? || f.object.new_record? %>
    <div class="field">
      <%= f.label :_destroy, 'Remove:' %>
      <%= f.check_box :_destroy %>
    </div>
  <% end %>
<% end %>